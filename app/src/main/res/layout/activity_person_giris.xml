<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/personn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".personGiris">

    <TextView
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Maaşı görmek için butona basınız" />

    <Button
        android:background="@drawable/buttoncolor2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:id="@+id/maasgor"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Maaş Gör" />

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E mail görmek için butona basınız" />

    <Button
        android:background="@drawable/buttoncolor2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:id="@+id/emailgor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="E mail Gör" />

    <TextView
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tel no görmek için butona basınız" />

    <Button
        android:background="@drawable/buttoncolor2"
        android:textSize="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:id="@+id/telgor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tel no Gör" />

    <Button
        android:background="@drawable/buttonarkaplan"
        android:layout_marginTop="70dp"
        android:id="@+id/geri1"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Çıkış yap" />
</LinearLayout>